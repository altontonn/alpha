<h1 align="center">All Blog Users</h1>
  <div align="center">
    <%= will_paginate %>
  <% @users.each do |user| %>
      <div class="row">
        <ul class="listing">
          <div class="well col-md-4 col-md-offset-4">
            <li><%= link_to gravatar_for(user), user_path(user) %></li>
            <li class="article-title"><%= link_to user.username, user_path(user)%></li>
            <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
            <% if logged_in? and current_user.admin? %>
              <li><%= link_to "Delete this user", user_path(user), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete the user and all their articles?" } %></li>
            <% end %>
          </div>
        <ul>
      </div>
  <% end %>
  <%= will_paginate %>
</div>
<%= link_to "New user", new_user_path %>
